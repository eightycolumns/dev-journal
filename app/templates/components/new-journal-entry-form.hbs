<form id='new-journal-entry' {{action 'publish' title date text on='submit'}}>
  <label for='title'>Title</label>
  {{input id='title' name='title' value=title required='required'}}

  <label for='date'>Date:</label>
  {{pikaday-input
    id='date'
    name='date'
    value=date
    format='DD MMMM YYYY'
    required='required'
    onSelection=(action 'setDate')
  }}

  <label for='text'>Text</label>
  {{textarea id='text' name='text' value=text required='required'}}

  <button>Publish</button>
</form>
